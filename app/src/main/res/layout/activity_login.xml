<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:hapticFeedbackEnabled="false"
    tools:context=".model.personas.LoginActivity">

    <Button
        android:id="@+id/googlebtn"
        android:layout_width="275dp"
        android:layout_height="56dp"
        android:background="@drawable/user"
        android:drawableStart="@drawable/shape"
        android:drawableBottom="@drawable/user"
        android:drawablePadding="10dp"
        android:foreground="@drawable/common_google_signin_btn_icon_dark"
        android:foregroundGravity="left"
        android:includeFontPadding="false"
        android:shadowColor="#8F2121"
        android:text="Ingresar"
        android:textAlignment="center"
        android:textColor="#000000"
        app:backgroundTint="@color/common_google_signin_btn_tint"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.715"
        app:rippleColor="#BA0000"
        app:strokeColor="@color/colorGreen" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="172dp"
        android:layout_height="148dp"
        android:background="@drawable/qrlogo"
        android:hapticFeedbackEnabled="true"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.588" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:shadowColor="#404040"
        android:text="Bienvenido a QuickID"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#000000"
        android:textSize="24sp"
        app:drawableTint="#0E0E0E"
        app:layout_constraintBottom_toTopOf="@+id/googlebtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="339dp"
        android:layout_height="82dp"
        android:layout_marginBottom="44dp"
        android:text="Quickid es una app para tomar asistencia automatica mediante codigos QR."
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>